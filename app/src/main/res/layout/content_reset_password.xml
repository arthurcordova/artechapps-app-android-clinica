<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.artechapps.app.activity.ResetPasswordActivity"
    tools:showIn="@layout/activity_reset_password">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:alpha="0.60"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Forneça seu e-mail cadastrado para solicitar o início do processo de redefinição da sua senha."
            android:textSize="14sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="E-mail">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textSize="12sp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_send"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector"
            android:clickable="false"
            android:text="Enviar"
            android:textColor="#ffffff"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>
